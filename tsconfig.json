{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"esModuleInterop": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"~@types/*": [
				"src/@types/*"
			],
			"~components/*": [
				"src/components/*"
			],
			"~constants/*": [
				"src/constants/*"
			],
			"~hooks/*": [
				"src/hooks/*"
			],
			"~images/*": [
				"src/images/*"
			],
			"~machines/*": [
				"src/machines/*"
			],
			"~mocks/*": [
				"src/mocks/*"
			],
			"~pages/*": [
				"src/pages/*"
			],
			"~schema/*": [
				"src/schema/*"
			],
			"~steps/*": [
				"src/steps/*"
			],
			"~stories/*": [
				"src/stories/*"
			],
			"~styles/*": [
				"src/styles/*"
			],
			"~utils/*": [
				"src/utils/*"
			],
			"~/*": [
				"dist/*"
			]
		}
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}